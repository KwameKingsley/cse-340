<h1>
    <%= title %>
</h1>
<% if (locals.notice) { %>
    <p class="notice">
        <%= notice %>
    </p>
    <% } %>

        <h2>Welcome <%= locals.accountData.account_firstname %>
        </h2>

        <section id="account-update">
            <h3>Account Management</h3>
            <p>
                <a href="/account/update/<%= locals.accountData.account_id %>">
                    Update Account Information
                </a>
            </p>
        </section>

        <% if (locals.accountData.account_type==="Employee" || locals.accountData.account_type==="Admin" ) { %>
            <section id="inventory-mgmt">
                <h3>Inventory Management</h3>
                <p>
                    <a href="/inv/" title="Manage car inventory">Go to Inventory Management</a>
                </p>
            </section>
            <% } %>
                <h3>Your Product Reviews</h3>
                <% if (locals.userReviews && userReviews.length> 0) { %>
                    <ul class="review-management">
                        <% userReviews.forEach(review=> { %>
                            <li>
                                <div class="review-info">
                                    <strong>
                                        <%= review.inv_make %>
                                            <%= review.inv_model %>
                                    </strong>
                                    <span>(Reviewed on <%= new Date(review.review_date).toLocaleDateString() %>)</span>
                                </div>
                                <div class="review-actions">
                                    <a href="/review/edit/<%= review.review_id %>">Edit</a> |
                                    <a href="/review/delete/<%= review.review_id %>">Delete</a>
                                </div>
                            </li>
                            <% }) %>
                    </ul>
                    <% } else { %>
                        <p>You have not authored any reviews yet.</p>
                        <% } %>