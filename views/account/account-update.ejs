<h1>
    <%= title %>
</h1>

<% if (locals.notice) { %>
    <p class="notice">
        <%= notice %>
    </p>
    <% } %>
        <% if (errors) { %>
            <ul class="error-list">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <div class="update-forms-container">

                    <section class="form-section">
                        <h2>Account Update</h2>
                        <form action="/account/update-info" method="post" id="updateAccountForm">
                            <label for="account_firstname">First Name</label>
                            <input type="text" name="account_firstname" id="account_firstname" required
                                value="<%= locals.account_firstname || locals.accountData.account_firstname %>">

                            <label for="account_lastname">Last Name</label>
                            <input type="text" name="account_lastname" id="account_lastname" required
                                value="<%= locals.account_lastname || locals.accountData.account_lastname %>">
                            <label for="account_email">Email Address</label>
                            <input type="email" name="account_email" id="account_email" required
                                placeholder="email@example.com"
                                value="<%= locals.account_email || locals.accountData.account_email %>">

                            <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
                            <button type="submit">Update Info</button>
                        </form>
                    </section>

                    <hr>

                    <section class="form-section">
                        <h2>Change Password</h2>
                        <p class="form-instruction">
                            Changing the password will overwrite your current password. Requirements:
                            Minimum 12 characters, at least 1 number, 1 capital letter, and 1 special character.
                        </p>
                        <form action="/account/update-password" method="post" id="changePasswordForm">
                            <label for="account_password">New Password</label>
                            <input type="password" name="account_password" id="account_password" required
                                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

                            <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
                            <button type="submit">Change Password</button>
                        </form>
                    </section>
                </div>

                <script>
                    const form = document.querySelector("#updateAccountForm");
                    const updateBtn = form.querySelector("button");
                    const inputs = form.querySelectorAll("input:not([type='hidden'])");

                    updateBtn.disabled = true;

                    form.addEventListener("input", () => {
                        let changed = false;

                        inputs.forEach(input => {
                            if (input.value !== input.defaultValue) {
                                changed = true;
                            }
                        });

                        updateBtn.disabled = !changed;
                    });
                </script>