<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <div class="login-container">
                <form action="/account/login" method="post" id="loginForm">
                    <label for="account_email">Email Address:</label>
                    <input type="email" name="account_email" id="account_email" required
                        placeholder="Enter a valid email address">

                    <label for="account_password">Password:</label>
                    <input type="password" name="account_password" id="account_password" required>

                    <button type="submit">Login</button>
                </form>

                <p class="signup-link">
                    No account? <a href="/account/register">Sign-up</a>
                </p>
            </div>